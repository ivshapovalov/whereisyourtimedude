<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="*"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button23"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="40"
            android:background="@drawable/bt_border"
            android:onClick="btClose_onClick"
            android:text="CLOSE"
            android:textColor="@color/text_color"/>

        <Button
            android:id="@+id/button24"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="40"
            android:background="@drawable/bt_border"
            android:onClick="btSave_onClick"
            android:text="SAVE"
            android:textColor="@color/text_color"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="top|left"
        >

        <EditText
            android:id="@+id/etNewTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_span="80"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="etNewTime_onClick"
            android:inputType="number"
            android:editable="true"
            android:enabled="true"/>
    </TableRow>

    <TableRow
        android:id="@+id/rowDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:gravity="top|left"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="20"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:text="DAY"/>

        <Button
            android:id="@+id/btDaysMinus10"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btDaysMinus10_onClick"
            android:text="-10"/>

        <Button
            android:id="@+id/btDaysMinus1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btDaysMinus1_onClick"
            android:text="-1"/>

        <TextView
            android:id="@+id/tvDays"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btDaysPlus1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btDaysPlus1_onClick"
            android:text="+1"/>

        <Button
            android:id="@+id/btDaysPlus10"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btDaysPlus10_onClick"
            android:text="+10"/>

    </TableRow>

    <TableRow
        android:id="@+id/rowHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top|left"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="20"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:text="HOUR"/>

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btHoursMinus10_onClick"
            android:text="-10"/>

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btHoursMinus1_onClick"
            android:text="-1"/>

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btHoursPlus1_onClick"
            android:text="+1"/>

        <Button
            android:id="@+id/button10"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btHoursPlus10_onClick"
            android:text="+10"/>
    </TableRow>

    <TableRow
        android:id="@+id/rowMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top|left"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="20"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:text="MIN"/>

        <Button
            android:id="@+id/button11"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMinutesMinus10_onClick"
            android:text="-10"/>

        <Button
            android:id="@+id/button12"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMinutesMinus1_onClick"
            android:text="-1"/>

        <TextView
            android:id="@+id/tvMinutes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button13"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMinutesPlus1_onClick"
            android:text="+1"/>

        <Button
            android:id="@+id/button14"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMinutesPlus10_onClick"
            android:text="+10"/>
    </TableRow>

    <TableRow
        android:id="@+id/rowSeconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top|left"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="20"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:text="SEC"/>

        <Button
            android:id="@+id/button15"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btSecondsMinus10_onClick"
            android:text="-10"/>

        <Button
            android:id="@+id/button16"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btSecondsMinus1_onClick"
            android:text="-1"/>

        <TextView
            android:id="@+id/tvSeconds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button17"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btSecondsPlus1_onClick"
            android:text="+1"/>

        <Button
            android:id="@+id/button18"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btSecondsPlus10_onClick"
            android:text="+10"/>
    </TableRow>

    <TableRow
        android:id="@+id/rowMillis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top|left"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="20"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:text="MILLI"/>

        <Button
            android:id="@+id/button19"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMillisMinus10_onClick"
            android:text="-10"/>

        <Button
            android:id="@+id/button20"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMillisMinus1_onClick"
            android:text="-1"/>

        <TextView
            android:id="@+id/tvMillis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:gravity="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button21"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMillisPlus1_onClick"
            android:text="+1"/>

        <Button
            android:id="@+id/button22"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="12"
            android:background="@android:drawable/checkbox_off_background"
            android:onClick="btMillisPlus10_onClick"
            android:text="+10"/>
    </TableRow>

</TableLayout>
