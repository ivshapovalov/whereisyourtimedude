<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.ActivityProjectsList">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/trowButtons"
            android:background="@drawable/bt_border">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonHome"
                android:onClick="buttonHome_onClick"
                android:layout_span="8"
                android:background="@drawable/bt_border"
                android:text="HOME"
                android:textColor="@color/text_color" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:id="@+id/btProjectsAdd"
                android:onClick="btProjectAdd_onClick"
                android:layout_span="8"
                android:background="@drawable/bt_border"
                android:textColor="@color/text_color" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btClear"
                android:onClick="btClear_onClick"
                android:layout_span="10"
                android:text="CLEAR"
                android:background="@drawable/bt_border"
                android:textColor="@color/text_color"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btProjectDBEditor"
                android:onClick="btEdit_onClick"
                android:layout_span="10"
                android:text="EDITOR"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/bt_border"
                android:textColor="@color/text_color" />


        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/svTableProjects"
            android:layout_marginTop="20dp">

        </ScrollView>

    </TableLayout>

</RelativeLayout>
