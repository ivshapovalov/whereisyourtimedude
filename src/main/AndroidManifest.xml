<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.brainworkout.whereisyourtimedude">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sand_clock"
        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivityChrono"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".database.manager.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".activities.ActivityUsersList"
            android:label="@string/users_list_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityDateTimePickerDialog"
            android:label="@string/date_time_picker_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityUser"
            android:label="@string/user_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityAreasList"
            android:label="@string/areas_list_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityArea"
            android:label="@string/area_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityProjectsList"
            android:label="@string/projects_list_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityProject"
            android:label="@string/project_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityPracticesList"
            android:label="@string/practices_list_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityPractice"
            android:label="@string/practice_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityPracticeHistoryList"
            android:label="@string/practice_history_list_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityPracticeHistory"
            android:label="@string/practice_history_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ActivityMain"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityCalendarView"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>